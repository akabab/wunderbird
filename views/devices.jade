extends layout

block content
  html
    head
      link(href="stylesheets/style.css" rel="stylesheet")
      link(href="stylesheets/devices.css" rel="stylesheet")
    body
      h1 Devices
      #devices
        if (sensors)
          each key in sensors
            button.device(id='#{key.name}')
              .name= key.name
              .status(class=key.active ? "active" : "")= key.active ? "On" : "Off"
              .value= key.value ? key.value : "null"

    script(src="https://cdn.socket.io/socket.io-1.2.0.js")
    script(src="js/jquery.min.js")
    script(src="js/jquery.transit.min.js")
    script(src="js/devices.js")
